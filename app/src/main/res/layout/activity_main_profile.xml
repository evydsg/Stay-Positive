<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainProfile">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/home_icon" />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="206dp"
        android:layout_height="172dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/person_icon" />


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:hint="Loading..."
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:hint="Loading...name"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:hint="Loading...email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_address"
        android:hint="Loading...dateOfBirth"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loading...gender"
        android:layout_below="@+id/date_of_birth"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_margin="20dp"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@drawable/border"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="58dp"
        android:layout_height="85dp"
        android:layout_below="@id/edit_profile_button"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="gone" />
</RelativeLayout>

